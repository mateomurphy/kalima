{
  "name": "kalima",
  "version": "0.0.1",
  "description": "frontend framework",
  "repository": "https://github.com/mateomurphy/kalima.git",
  "author": "Mateo Murphy <mateo.murphy@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "files": [
    "dist",
    "es",
    "lib",
    "src"
  ],
  "scripts": {
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:umd": "cross-env BABEL_ENV=commonjs NODE_ENV=development webpack src/index.js dist/kalima.js",
    "build:umd:min": "cross-env BABEL_ENV=commonjs NODE_ENV=production webpack src/index.js dist/kalima.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "clean": "rimraf lib dist es",
    "prepublish": "npm run clean && npm run build",
    "test": "jest"
  },
  "dependencies": {
    "babel-loader": "^6.2.10",
    "cross-env": "^3.1.4",
    "is-class": "^0.0.4",
    "lodash": "^4.17.4",
    "rimraf": "^2.5.4"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-jest": "^18.0.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "baobab": "^2.3.4",
    "enzyme": "^2.7.0",
    "jest": "^18.1.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "webpack": "2.2.0-rc.4"
  }
}
